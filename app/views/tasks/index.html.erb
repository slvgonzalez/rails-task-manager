<h3>All my tasks: </h3>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <i class="fa fa-solid fa-square-check"> </i>
    <% else %>
      <i class="fa fa-solid fa-square"></i>
    <li><%= link_to task.title, task_path(task.id) %></li>
    <% end %>
  <% end %>
</ul>


